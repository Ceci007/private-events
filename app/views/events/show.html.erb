<div class="container" >
  <h1 class="text-center mt-5 mb-4">Events detail info</h1>

  <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header font-italic d-flex">
        <%= link_to gravatar_image_tag(@event.creator, size: 50), user_path(@event.creator), class: "mr-3" %>
        <span class="align-self-center">by <%= @event.creator.username if @event.creator %></span>
      </div>
      <div class="card-body">
        <h5 class="card-title title text-left"><%= @event.title %></h5>
        <div class="card-text text-left"><%= simple_format(@event.description) %></div>
        <%= event_process_links(@event)%>
        <div class="card-text text-left mt-3">
          <h5>Attendees:</h5>
          <ul>
            <% @event.attendances.each do | attendance | %>
              <li><%= attendance.user.username%></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(@event.created_at) %> ago, edited <%= time_ago_in_words(@event.updated_at) %> ago</small>
      </div>
    </div>
    <div class="my-4">
      <%= link_to 'Back to events', events_path, class: "link" %>
    </div>
</div>