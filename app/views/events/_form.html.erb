<%= form_with(model: event, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control shadow rounded" %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :date, class: "form-control shadow rounded" %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control shadow rounded" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control shadow rounded" %>
  </div>

  <div class="actions">
    <%= form.submit( class: "btn btn-primary") %>
    <%= link_to 'Back', events_path, class: "btn btn-secondary" %>
  </div>
<% end %>